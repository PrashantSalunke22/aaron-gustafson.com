# Force www:
RewriteEngine on
RewriteCond %{HTTP_HOST} ^aaron-gustafson.com [NC]
RewriteRule ^(.*)$ https://www.aaron-gustafson.com/$1 [L,R=301,NC]

# Errors
ErrorDocument 400 /400.html
ErrorDocument 404 /404.html

# UTF-8
AddDefaultCharset utf-8

# GZip
AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
BrowserMatch ^Mozilla/4 gzip-only-text/html
BrowserMatch ^Mozilla/4\.0[678] no-gzip
BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
<FilesMatch "\\.(js|css|html|htm|php|xml)$">
  SetOutputFilter DEFLATE
  BrowserMatch ^Mozilla/4 gzip-only-text/html
        BrowserMatch ^Mozilla/4\.0[678] no-gzip
        BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</FilesMatch>

# ETags
Header unset ETag
FileETag None

<FilesMatch "(?i)^.*\.(ico|flv|jpg|jpeg|png|gif|js|css)$">
Header unset Last-Modified
Header set Expires "Fri, 21 Dec 2012 00:00:00 GMT"
Header set Cache-Control "public, no-transform"
</FilesMatch>

# Force the latest IE version
# Use ChromeFrame if it's installed for a better experience for the poor IE folk
Header set X-UA-Compatible "ie=edge,chrome=1"

# Audio MIME Types
AddType audio/mpeg mp3
AddType audio/mp4 m4a
AddType audio/ogg ogg
AddType audio/ogg oga
AddType audio/webm webma
AddType audio/wav wav

# Video MIME Types
AddType video/ogg ogv
AddType video/mp4 mp4 m4v
AddType video/webm webm

# SVG
AddType image/svg+xml svg svgz
<FilesMatch "^.*\.(svgz)$">
Header set Content-Encoding "gzip"
</FilesMatch>

# JSON
AddType 'application/json; charset=utf-8' .json

# UTF-8
AddType 'text/css; charset=utf-8' .css
AddType 'text/javascript; charset=utf-8' .js

# Fonts
AddType application/vnd.ms-fontobject eot

# Lockdown - only on the live serve though
<FilesMatch "\.(html|htm)$">
  SetEnv HTML
</FilesMatch>
Header set X-XSS-Protection "1; mode=block"
Header set X-Content-Type-Options "nosniff"
<IfDefine LIVE>
  # https://report-uri.io/home/generate
  Header set Content-Security-Policy "default-src * *.vimeo.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://webmention.io *.twitter.com *.twimg.com www.google-analytics.com stats.g.doubleclick.net *.vimeo.com *.vimeocdn.com *.newrelic.com *.nr-data.net disqus.com *.disqus.com *.disquscdn.com assets.codepen.io https://codepen.io/assets/ production-assets.codepen.io *.getclicky.com *.carbonads.com *.carbonads.net adn.fusionads.net *.googletagmanager.com *.typekit.net gist.github.com; style-src * 'unsafe-inline' *.vimeocdn.com; img-src * data: www.google-analytics.com stats.g.doubleclick.net https://stats.g.doubleclick.net; connect-src ws://webmention.io:8080 https://links.services.disqus.com https://api.github.com wss://realtime.services.disqus.com; child-src 'self' www.youtube.com *.twitter.com *.vimeo.com *.vimeocdn.com codepen.io *.slideshare.net; upgrade-insecure-requests; block-all-mixed-content;"
  Header set Public-Key-Pins "pin-sha256='1AD97Iz6xlmMrlaim5bZoIhwUr2WAowsI+msDc0op2k='; pin-sha256='4SflGm7MUpml4PWSclDw7OGMJdRk+YcIfi6qJ2iG6zE='; pin-sha256='BFhqRqgHU+b7VQLsM1kZwBu6VVKnLx7QiO2PCLfG1m4='; max-age=10"
  Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfDefine>

# Redirect links
RewriteBase /

# Removing AMP
RewriteRule ^amp/(.*)$ $1 [L,R=301]

# Moving Tags
RewriteRule ^notebook/tags/(.*)$ tags/$1 [L,R=301]

# Old Links in Notebook directory
RewriteCond %{REQUEST_URI} ^notebook/
RewriteCond %{REQUEST_URI} !^notebook/links/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^notebook/(.*) notebook/links/$1 [L,R=301]

# Redirect Atom feeds
RewriteRule ^atom\.xml feeds/all.xml [L,R=301]
RewriteRule ^atom-(.*)\.xml feeds/$1.xml [L,R=301]

# Service Worker
<FilesMatch "serviceworker(\.min)?\.js$">
Header set Cache-Control "max-age=0"
</FilesMatch>

# Additional headers
Header set Timing-Allow-Origin: "*"