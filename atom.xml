---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title><![CDATA[{{ site.title | cdata_escape }} Latest Posts &amp; Links]]></title>
	<link href="{{ site.url }}/atom.xml" rel="self"/>
	<link href="{{ site.url }}/"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}/</id>
	<author>
		<name><![CDATA[{{ site.author | strip_html }}]]></name>
		{% if site.email %}<email><![CDATA[{{ site.email }}]]></email>{% endif %}
	</author>
	<generator uri="https://jekyllrb.com/">Jekyll</generator>

	{% assign feed = site.documents | where:'feed',true | sort: 'date' | reverse %}
	{% for post in feed limit:20 %}
		{% if post.ref_url %}
			<entry>
				<title type="html"><![CDATA[Link: {{ post.title | titlecase | cdata_escape }}]]></title>
				<link href="{{ post.url | prepend:site.url }}"/>
				<updated>{{ post.date | date_to_xmlschema }}</updated>
				<id>{{ post.url | prepend:site.url }}</id>
				<content type="html"><![CDATA[{{ post.content | expand_urls: site.url | cdata_escape }}<p><a rel="full-article" href="{{ post.ref_url }}">Read on {{ post.ref_source }}&nbsp;&rarr;</a></p>]]></content>
			</entry>
		{% else %}
			<entry>
				<title type="html"><![CDATA[Post: {{ post.title | titlecase | cdata_escape }}]]></title>
				<link href="{{ post.url | prepend:site.url }}"/>
				<updated>{{ post.date | date_to_xmlschema }}</updated>
				<id>{{ post.id | prepend:site.url }}</id>
				<content type="html"><![CDATA[{{ post.content | expand_urls: site.url | cdata_escape }}]]></content>
			</entry>
		{% endif %}
	{% endfor %}
</feed>
